{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Admin | User {% endblock %}

{% block body %}

    <h1 class="container-fluid d-flex justify-content-center">Gestion des villes</h1>

    <section class="container list">
        <table class="table table-hover" >
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Code Postal</th>
                <th scope="col">Action</th>
            </tr>
            </thead>
            <tbody>
            {% for ville in villes %}
                <tr>
                    <th scope="row"><a class="list-group-item list-group-item-action" href="">{{ ville.name }}</a></th>
                    <td><a class="list-group-item list-group-item-action" href="">{{ ville.cp }}</a></td>
{#                    <td><a  href="{{ path('user_update', {'id': user.id}) }}">Modifier</a> - <a class="text-danger" href="{{ path('admin_user_delete', {'id': user.id}) }}">Supprimer</a></td>#}
                    <td><a  href="">Modifier</a> - <a class="text-danger" href="{{ path('admin_ville_delete', {'id': ville.id}) }}">Supprimer</a></td>
                </tr>

            {% endfor %}

            </tbody>
        </table>
    </section>
<div class="container-fluid d-flex justify-content-center">
    <a class="link_button btn btn-outline-secondary " href="{{ path('admin_ville_create') }}" role="button">Ajouter une ville</a>

</div>
    <div class="container-fluid d-flex justify-content-center">
        <a class="link_button btn btn-outline-secondary " href="{{ path('admin_dash') }}" role="button">Retour</a>

    </div>
{% endblock %}